            )
            @APIREsponses({
                @ApiResponse(
                    responseCode = "",
                    description=""
                ),
                @ApiResponse(
                    responseCode = "",
                    description ="",
                    content = @Content(
                        schema = @Schema(implementation = .class)
                    )
                )
            })
        }

